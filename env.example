# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)
# ============================================

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080
PRODUCTION_MODE=true

# ============================================
# Application URLs
# ============================================
# Update these with your actual domain after deployment
APP_BASE_URL=https://your-app-name.onrender.com
APP_TRACKING_URL=https://your-app-name.onrender.com
APP_NAME=Reliable Carriers
ADMIN_EMAIL=admin@reliablecarriers.co.za

# ============================================
# Database Configuration
# ============================================
# Option 1: MySQL (external or managed)
DB_URL=jdbc:mysql://your-db-host:3306/reliable_carriers?useSSL=true&serverTimezone=UTC
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password
DB_DDL_AUTO=validate  # Use 'update' only for initial setup, then switch to 'validate'

# Option 2: PostgreSQL (for Railway/Render managed DB)
# DB_URL=jdbc:postgresql://host:5432/reliable_carriers
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_DDL_AUTO=validate

# ============================================
# JWT Configuration
# ============================================
# Generate a strong random secret (min 32 characters, 256 bits recommended)
# You can generate one using: openssl rand -hex 32
JWT_SECRET=your-very-long-random-secret-key-here-min-256-bits
JWT_EXPIRATION=86400000

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
GMAIL_USERNAME=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password
MAIL_DEBUG=false

# ============================================
# SMS Configuration (SMSPortal)
# ============================================
SMSPORTAL_API_KEY=your-sms-api-key
SMSPORTAL_API_SECRET=your-sms-api-secret
SMS_ENABLED=true
SMS_SENDER_NAME=Reliable

# ============================================
# Google Maps API
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# Paystack Configuration
# ============================================
# IMPORTANT: Use LIVE keys (sk_live_... and pk_live_...) in production
# Test keys (sk_test_... and pk_test_...) are for development only
PAYSTACK_SECRET_KEY=sk_live_your_production_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_production_public_key
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_MOCK_MODE=false
PAYSTACK_WEBHOOK_SECRET=your-webhook-secret-here
PAYSTACK_TIMEOUT=30
PAYSTACK_RETRY_ATTEMPTS=3

# ============================================
# OAuth2 Configuration
# ============================================
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/login/oauth2/code/google

# Facebook OAuth2
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=https://your-domain.com/login/oauth2/code/facebook

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_RELIABLE_CARRIERS=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_WEB=INFO
LOG_LEVEL_HIBERNATE=WARN
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ============================================
# Spring Boot Actuator
# ============================================
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=never
ACTUATOR_HEALTH_COMPONENTS=never
PROMETHEUS_ENABLED=false

# ============================================
# Error Handling
# ============================================
ERROR_INCLUDE_MESSAGE=never
ERROR_INCLUDE_STACKTRACE=never
ERROR_INCLUDE_BINDING_ERRORS=never

# ============================================
# Notifications
# ============================================
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true

# ============================================
# Optional Features
# ============================================
# OCR Configuration
OCR_ENABLED=false
OCR_PROVIDER=tesseract
GOOGLE_CLOUD_VISION_API_KEY=

# Verification Configuration
VERIFICATION_ENABLED=false
VERIFICATION_CIPC_API_URL=
VERIFICATION_CIPC_API_KEY=
VERIFICATION_SARS_API_URL=
VERIFICATION_SARS_API_KEY=

# OpenAI (for AI chatbot - disabled by default)
OPENAI_API_KEY=
OPENAI_API_ENABLED=false
OPENAI_API_MODEL=gpt-3.5-turbo

