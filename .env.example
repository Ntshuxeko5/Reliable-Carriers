# ============================================
# Reliable Carriers - Environment Variables
# ============================================
# This file contains all environment variables needed for deployment
# Copy this file to .env for local development (DO NOT commit .env to git)
# For Render and Railway: Set these variables in their respective dashboards
# ============================================

# ============================================
# PRODUCTION MODE
# ============================================
PRODUCTION_MODE=false

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_URL=jdbc:postgresql://localhost:5432/reliable_carriers
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here
DB_DRIVER=
DB_PLATFORM=
HIBERNATE_DIALECT=
DB_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=Reliable Carriers
APP_BASE_URL=http://localhost:8080
ADMIN_EMAIL=admin@reliablecarriers.co.za
APP_DEBUG_MODE=false
APP_TRACKING_URL=

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=8ef248ba8564ab923ea77b106afd9bc5
JWT_EXPIRATION=86400000

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
GMAIL_USERNAME=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here
MAIL_USE_SSL=false
MAIL_USE_STARTTLS=true
MAIL_DEBUG=false
EMAIL_NOTIFICATIONS_ENABLED=true

# ============================================
# SMS CONFIGURATION
# ============================================
SMSPORTAL_API_KEY=your_smsportal_api_key_here
SMSPORTAL_API_SECRET=your_smsportal_api_secret_here
SMS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_BASE_URL=https://api.africastalking.com/version1/messaging
SMS_SENDER_NAME=Reliable

# ============================================
# GOOGLE MAPS API
# ============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# PAYSTACK CONFIGURATION
# ============================================
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_MOCK_MODE=false
PAYSTACK_FALLBACK_ON_ERROR=true
PAYSTACK_TIMEOUT=30
PAYSTACK_RETRY_ATTEMPTS=3
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# OAUTH2 CONFIGURATION
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=/login/oauth2/code/google
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
FACEBOOK_REDIRECT_URI=/login/oauth2/code/facebook

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL_RELIABLE_CARRIERS=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_WEB=INFO
LOG_LEVEL_HIBERNATE=WARN

# ============================================
# SPRING BOOT ACTUATOR
# ============================================
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=never
ACTUATOR_HEALTH_COMPONENTS=never
PROMETHEUS_ENABLED=false

# ============================================
# ERROR HANDLING
# ============================================
ERROR_INCLUDE_MESSAGE=never
ERROR_INCLUDE_STACKTRACE=never
ERROR_INCLUDE_BINDING_ERRORS=never
ERROR_INCLUDE_EXCEPTION=false

# ============================================
# OPENAI API (Optional)
# ============================================
OPENAI_API_KEY=
OPENAI_API_ENABLED=false
OPENAI_API_MODEL=gpt-3.5-turbo

# ============================================
# OCR CONFIGURATION (Optional)
# ============================================
OCR_ENABLED=false
OCR_PROVIDER=tesseract
GOOGLE_CLOUD_VISION_API_KEY=

# ============================================
# VERIFICATION CONFIGURATION (Optional)
# ============================================
VERIFICATION_ENABLED=false
VERIFICATION_CIPC_API_URL=
VERIFICATION_CIPC_API_KEY=
VERIFICATION_SARS_API_URL=
VERIFICATION_SARS_API_KEY=
